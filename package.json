{
  "name": "nitzan-portfolio",
  "version": "1.0.0",
  "description": "Enterprise React application with Claude Code",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:https": "vite --https",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext js,jsx,ts,tsx --fix",
    "lint:check": "eslint src --ext js,jsx,ts,tsx",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "security": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "validate": "npm run typecheck && npm run lint:check && npm run format:check && npm run test && npm run security",
    "clean": "rm -rf dist coverage .vite",
    "docker:build": "docker build -f Dockerfile.dev -t react-app:dev .",
    "docker:run": "docker run -p 5173:5173 react-app:dev",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "start": "npm run preview"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.8.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  }
}
